<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_background">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="160dp"
        android:layout_height="145dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorAccentTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_account" />

    <TextView
        android:id="@+id/textView_personalize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/test_user"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button_favorites"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="388dp"
        android:layout_height="44dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#EBE7ECE7"
        android:drawableLeft="@drawable/ic_favorite"
        android:drawableRight="@drawable/ic_arrow_right"
        android:text="    Favorites"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#0F0607"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_personalize" />

    <Button
        android:id="@+id/button_orders"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="388dp"
        android:layout_height="44dp"
        android:backgroundTint="#EBE7ECE7"
        android:drawableLeft="@drawable/ic_bookmark"
        android:drawableRight="@drawable/ic_arrow_right"
        android:text="    Orders"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#0F0607"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_favorites" />

    <Button
        android:id="@+id/button_settings"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="388dp"
        android:layout_height="44dp"
        android:backgroundTint="#EBE7ECE7"
        android:drawableLeft="@drawable/ic_settings"
        android:drawableRight="@drawable/ic_arrow_right"
        android:text="    Settings"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#0F0607"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_orders" />

    <Button
        android:id="@+id/button_about"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="388dp"
        android:layout_height="44dp"
        android:backgroundTint="#EBE7ECE7"
        android:drawableLeft="@drawable/ic_info"
        android:drawableRight="@drawable/ic_arrow_right"
        android:text="    About Dress.me"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#0F0607"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_settings" />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorAccentOne"
        android:text="@string/button_logout"
        android:textColor="#FAFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.962"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>