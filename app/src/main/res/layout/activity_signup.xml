<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/loginbackground2"
    android:fitsSystemWindows="true">

    <EditText
        android:id="@+id/name_edittext_signup"
        android:layout_width="332dp"
        android:layout_height="43dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#D4DADF"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="#D4DADF"
        android:textColorHint="#D4DADF"
        app:layout_constraintBottom_toTopOf="@+id/email_edittext_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/email_edittext_signup"
        android:layout_width="333dp"
        android:layout_height="47dp"
        android:backgroundTint="#D4DADF"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#D4DADF"
        android:textColorHint="#D4DADF"
        app:layout_constraintBottom_toTopOf="@+id/password_edittext_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/password_edittext_signup"
        android:layout_width="334dp"
        android:layout_height="48dp"
        android:backgroundTint="#D4DADF"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#D4DADF"
        android:textColorHint="#D4DADF"
        app:layout_constraintBottom_toTopOf="@+id/password_reenter_edittext_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/password_reenter_edittext_signup"
        android:layout_width="334dp"
        android:layout_height="48dp"
        android:layout_marginBottom="68dp"
        android:backgroundTint="#D4DADF"
        android:hint="Re-enter Password"
        android:inputType="textPassword"
        android:textColor="#D4DADF"
        android:textColorHint="#D4DADF"
        app:layout_constraintBottom_toTopOf="@+id/signup_button_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/signup_button_signup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Create Account"
        app:layout_constraintBottom_toTopOf="@+id/login_button_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/login_button_signup"
        android:layout_width="399dp"
        android:layout_height="21dp"
        android:layout_marginBottom="208dp"
        android:backgroundTint="#D4DADF"
        android:gravity="center"
        android:text="Already a member? Login"
        android:textColor="#D4DADF"
        android:textColorHint="#D4DADF"
        android:textSize="16dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>